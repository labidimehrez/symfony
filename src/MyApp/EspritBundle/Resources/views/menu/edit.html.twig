
{% extends 'MyAppEspritBundle:BackOffice:administration.html.twig' %}

 {% block editmenu %}      {% include 'TwitterBootstrapBundle::stylesheets.html.twig'%}

<header><h3 class="tabs_involved">Gestion de Contenu menu</h3>
    <ul class="tabs">
        <!-- <li><a href="#tab1">Posts</a></li>-->

    </ul>
</header>  
<div> 
    <table style="float: left;margin-left: 10px;"> 
        <tr> 

            <td><b>Position</b></td> 
            <td width="75px;"> &nbsp;  </td>

            <td width="330"><b>Rubrique Titre</b></td> 
            <td><b>Actions</b></td> 
        </tr> 
    </table> 
</div>

<div id="tab1" class="tab_content" style="height: 250px; width: 680px; overflow: auto; display: block;">
    <table class="tablesorter" cellspacing="0"> 

        <tbody> 
            {% for menu2 in menu2 %}
            <tr> 
                <!--   <td><input type="checkbox"></td> -->
                <td>{{menu2.position}}</td> 
                <td>{#{app.user.roles|join }#}</td> 
                <td>{{menu2.name}}</td> 


                <td>
                    <a href="{{ path('my_app_esprit_menu_edit',{'id':menu.id}) }}">
                        <img src="{{ asset('bundles/myappesprit/images/admin/icn_edit.png') }}" alt="" />
                    </a>   &nbsp;&nbsp;
                    <a href="{{ path('my_app_esprit_menu_delete',{'id':menu.id}) }}">
                        <img src="{{ asset('bundles/myappesprit/images/admin/icn_trash.png') }}" alt="" />
                    </a> 
                </td>
            </tr> 

            {%endfor%}


        </tbody> 
    </table>
</div> 

<form role="form" method="post" {{ form_enctype(form) }} >
    <article class="module width_full">
        <header><h3>modifier la rurique</h3></header>
        <div class="module_content">

            <fieldset>
                <table width="200" >
                    <tr>
                        <td> <label>Rubrique Position</label></td>
                        <td>{{form_widget(form.position, { 'attr': {'placeholder': 'position','class':'inp-form','style': 'width: 50px' } }) }}</td>
                        <td> <label>Rubrique Titre</label></td>
                        <td>{{form_widget(form.name, { 'attr': {'placeholder': 'Title','class':'inp-form','style': 'width: 100px' } }) }}</td>
                    </tr>
                </table>  

                <label>Rubrique Lien</label>
        {{form_widget(form.lien, { 'attr': {'placeholder': 'Link','class':'inp-form'} }) }}

            </fieldset>                      
            <div class="clear"></div>
        </div>
        <footer>
            <div class="submit_link">
                                  {{form_widget(form._token)}}
                <input type="submit"   value="Enregistrer" class="alt_btn" id="submiteditmenu">
                <input type="submit" href="{{path('my_app_esprit_homepage') }}" value="Reset">


            </div>
        </footer>
    </article> 
</form>
 

<script type="text/javascript">
    document.querySelector('#submiteditmenu').onclick = function() {
        swal({
            title: "Alert automatique!",
            text: "Veuillez patientez un peu",
            timer: 600000,
            showConfirmButton: false
        });
    };
</script>






