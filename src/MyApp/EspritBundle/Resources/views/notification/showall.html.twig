                <div class="message">{{notif.contenu}} 
                </div>
                <div class="messageinfo">
                    <i class="icon-comment"></i>{{ time_diff(notif.datecreation) }}
                </div>
            </div>
        </a>
</li>
    {%endif%}  

        {%endif%}
