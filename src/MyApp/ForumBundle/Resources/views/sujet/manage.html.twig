
{% extends 'MyAppEspritBundle:BackOffice:administration.html.twig' %}

 {% block showsujet %}   {% include 'TwitterBootstrapBundle::stylesheets.html.twig'%}

<header><h3 class="tabs_involved">Content Sujet Manager</h3>
    <ul class="tabs">
        <li><a href="#tab1">Posts</a></li>
        <li><div style="padding-bottom: 20px;">  <input type="submit"  value="change"  style="background-color: transparent;border: none;"/> </div> </li>
    </ul>
</header>  

<form  action='{{path('my_app_user_resultatchoixrole')}}' method="post" {{ form_enctype(form) }} > 
    <div id="tab1" class="tab_content" style="height: 250px; width: 680px; overflow: auto; display: block;">
        <table class="tablesorter" cellspacing="0"> 
            <thead> 
                <tr> 
                    <th> </th> 
                    <th>No</th> 

                    <th>Sujet Title</th> 
                    <th>Post at</th> 
                    <th>Thread</th>
                    <th>Actions</th> 
                </tr> 
            </thead> 
            <tbody> 
            {% for sujet in sujet %}
                <tr> 
                    <td><input type="checkbox"></td> 
                    <td>{{sujet.id}}</td> 
                    <td>{{sujet.sujet}}</td> 
                    <td>{{sujet.datecreation|date('Y-M-d')}}  </td> 
                {# <td>{{sujet.thread}}  </td> #}
                    <td>
                        <select >
                      {%if sujet.thread==1%}<option value="1" selected="selected">1</option>{%else%} <option value="1">1</option>{%endif%}
                       {%if sujet.thread==2%}<option value="2" selected="selected">2</option>{%else%} <option value="2">2</option>{%endif%}
                       {%if sujet.thread==3%}<option value="3" selected="selected">3</option>{%else%} <option value="3">3</option>{%endif%}
                       {%if sujet.thread==4%}<option value="4" selected="selected">4</option>{%else%} <option value="4">4</option>{%endif%}
                        </select>

                    </td>



                    <td>
                        <a href="{{ path('my_app_forum_sujet_edit',{'id':sujet.id}) }}">
                            <img src="{{ asset('bundles/myappesprit/images/admin/icn_edit.png') }}" alt="" />
                        </a>    
                        <a href="{{ path('my_app_forum_sujet_delete',{'id':sujet.id}) }}">
                            <img src="{{ asset('bundles/myappesprit/images/admin/icn_trash.png') }}" alt="" />
                        </a> 
                    </td>
                </tr> 

            {%endfor%}


            </tbody> 
        </table>



 {{form_widget(form._token)}}  



        </br></br>

    </div>   
</form>


 {% endblock  %}


