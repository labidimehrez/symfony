
{% extends 'MyAppEspritBundle:BackOffice:administration.html.twig' %}

 {% block showtag %}   
                <header><h3 class="tabs_involved">Content Tag Manager</h3>
                    <ul class="tabs">
                        <li><a href="#tab1">Posts</a></li>
                        <li><a href="#">Comments</a></li>
                    </ul>
                </header>  


<div id="tab1" class="tab_content">
    <table class="tablesorter" cellspacing="0"> 
        <thead> 
            <tr> 
                <th></th> 
                <th>No</th> 
           <th> </th> 
                <th>Tag Title</th> 
                <th>Actions</th> 
            </tr> 
        </thead> 
        <tbody> 
            {% for tag in tag %}
            <tr> 
                <td><input type="checkbox"></td> 
                <td>{{tag.id}}</td> 
                <td>{#{app.user.roles|join }#}</td> 
                <td>{{tag.title}}</td> 


                <td>
                    <a href="{{ path('my_app_forum_tag_edit',{'id':tag.id}) }}">
                        <img src="{{ asset('bundles/myappesprit/images/admin/icn_edit.png') }}" alt="" />
                    </a>   &nbsp;&nbsp;
                    <a href="{{ path('my_app_forum_tag_delete',{'id':tag.id}) }}">
                        <img src="{{ asset('bundles/myappesprit/images/admin/icn_trash.png') }}" alt="" />
                    </a> 
                </td>
            </tr> 

            {%endfor%}


        </tbody> 
    </table>
</div> 

<form  action='{{path('my_app_forum_tag_add')}}' method="post" {{ form_enctype(form) }} > 
                        <article class="module width_full">
                            <header><h3>Post New Tag</h3></header>
                            <div class="module_content">
                                <fieldset>
                                    <label>Tag Title</label>
                                    {{form_widget(form.title, { 'attr': {'placeholder': '  Title ','class':'inp-form'} }) }}
                                   
                                </fieldset>
                               
                                
                                
                                <div class="clear"></div>
                            </div>
                            <footer>
                                <div class="submit_link">
                                  {{form_widget(form._token)}}
                                    <input type="submit" value="Publish" class="alt_btn">
                                    <input type="submit" href="{{path('my_app_esprit_homepage') }}" value="Reset">
                                </div>
                            </footer>
                        </article> </form>
 {% endblock  %}


